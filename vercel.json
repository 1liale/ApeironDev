{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "frontend/api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/frontend/api/$1"
    },
    {
      "src": "/((?!api|_next|_vercel|favicon.ico|robots.txt|logo.png|404.png|placeholder.svg).*)",
      "dest": "/frontend/$1"
    }
  ]
} 